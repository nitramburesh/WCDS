    "lit": "^3.3.1",
    "playwright": "^1.53.2",
    "storybook": "10.2.1",
    "style-dictionary": "^5.1.1",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "lit": "^3.3.1"
  },
  "customElements": "custom-elements.json"
