{
  "name": "wcds",
  "version": "0.3.0",
  "description": "Web component design system",
  "main": "./dist/wcds.js",
  "module": "./dist/wcds.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/wcds.js",
      "require": "./dist/wcds.js"
    },
    "./style": "./dist/wcds.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "./README.md",
    "LICENSE",
    "./custom-elements.json"
  ],
  "scripts": {
    "generate-tokens": "node src/tokens/build-tokens.js",
    "manifest": "pnpm cem analyze",
    "dev": "pnpm prepare && storybook dev -p 6060",
    "build": "vite build && tsc -p tsconfig.build.json && cem analyze",
    "preview": "vite preview",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --auto-accept-changes --force-rebuild",
    "prepack": "pnpm run build",
    "pack": "npm pack",
    "prepare": "pnpm generate-tokens && pnpm manifest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitramburesh/WCDS.git"
  },
