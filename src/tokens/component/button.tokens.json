{
  "button": {
    "size": {
      "sm": {
        "padding": { "$value": "{spacing.xs}", "$type": "dimension" },
        "radius": { "$value": "{radius.full}", "$type": "dimension" },
        "fontSize": { "$value": "{size.3}", "$type": "dimension" }
      },
      "md": {
        "padding": { "$value": "{spacing.sm}", "$type": "dimension" },
        "radius": { "$value": "{radius.full}", "$type": "dimension" },
        "fontSize": { "$value": "{size.4}", "$type": "dimension" }
      },
      "lg": {
        "padding": { "$value": "{spacing.md}", "$type": "dimension" },
        "radius": { "$value": "{radius.xl}", "$type": "dimension" },
        "fontSize": { "$value": "{size.5}", "$type": "dimension" }
      }
    },
    "variant": {
      "primary": {
        "default": {
          "bg": { "$value": "{color.primary.900}", "$type": "color" },
          "fg": { "$value": "{color.neutral.100}", "$type": "color" }
        },
        "hover": {
          "bg": { "$value": "{color.primary.800}", "$type": "color" },
          "fg": { "$value": "{color.neutral.100}", "$type": "color" }
        },
        "borderColor": { "$value": "{color.primary.900}", "$type": "color" }
      },
      "secondary": {
        "default": {
          "bg": { "$value": "{color.neutral.100}", "$type": "color" },
          "fg": { "$value": "{color.secondary.800}", "$type": "color" }
        },
        "hover": {
          "bg": { "$value": "{color.neutral.100}", "$type": "color" },
          "fg": { "$value": "{color.secondary.700}", "$type": "color" }
        },
        "borderColor": { "$value": "{color.secondary.800}", "$type": "color" }
      },
      "ghost": {
        "default": {
          "bg": { "$value": "transparent", "$type": "color" },
          "fg": { "$value": "{color.primary.900}", "$type": "color" }
        },
        "hover": {
          "bg": { "$value": "{color.neutral.100}", "$type": "color" },
          "fg": { "$value": "{color.primary.800}", "$type": "color" }
        },
        "borderColor": { "$value": "transparent", "$type": "color" }
      }
    }
  }
}
